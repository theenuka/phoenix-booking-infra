# Phoenix Booking Infrastructure - Terraform Variables
# Copy this file to terraform.tfvars and fill in your values

# AWS Region where infrastructure will be deployed
aws_region = "us-east-1"

# CIDR block for the VPC
# Default: 10.0.0.0/16 provides 65,536 IP addresses
vpc_cidr = "10.0.0.0/16"

# Your public IP address or CIDR for SSH access to bastion
# Find your IP: curl ifconfig.me
# Examples:
#   - Single IP: "203.0.113.45/32"
#   - IP range: "203.0.113.0/24"
#   - Multiple IPs: Use security group rules instead
admin_cidr = "YOUR_PUBLIC_IP/32"

# SSH key pair name in AWS EC2
# Create one in AWS Console: EC2 > Key Pairs > Create
# Or use existing: ssh-keygen -t rsa -b 4096 -f ~/.ssh/phoenix-k8s-key
ssh_key_name = "phoenix-k8s-key"

# Tags for resource identification
project_name = "phoenix-booking"
environment  = "production"

# Optional: Uncomment to customize instance types
# bastion_instance_type  = "t3.micro"
# k8s_master_instance_type = "t3.large"
# k8s_worker_instance_type = "t3.large"
# k8s_worker_count = 2
